<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/calendarbutton_home"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="32dp"
                        android:layout_marginStart="54dp"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Calendar"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/connectbutton_home"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="32dp"
                        android:layout_marginStart="54dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Connect"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/logbutton_home"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="54dp"
                        android:layout_marginRight="32dp"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Log"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/settingsbutton_home"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="32dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginEnd="54dp"
                        android:layout_marginRight="54dp"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Settings"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/doctorsvisitsbutton_home"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="32dp"
                        android:layout_marginStart="54dp"
                        android:layout_marginTop="54dp"
                        android:layout_marginRight="54dp"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:text="Doctor's Visits"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/medicalpassportbutton_home"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="32dp"
                        android:layout_marginLeft="54dp"
                        android:layout_marginTop="54dp"
                        android:layout_marginEnd="52dp"
                        android:layout_marginRight="52dp"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:gravity="center"
                        android:text="Medical Passport"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>