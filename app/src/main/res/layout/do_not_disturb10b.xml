<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pageheader_10b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/fira_sans_bold"
                android:gravity="center"
                android:text="Do Not Disturb"
                android:textSize="30sp" />

            <Switch
                android:id="@+id/donotdistburb_mainswitch"
                android:layout_width="354dp"
                android:layout_height="46dp"
                android:layout_margin="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/fira_sans_medium"
                android:text="Do Not Disturb"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/calendardnd_switch"
                android:layout_width="302dp"
                android:layout_height="28dp"
                android:layout_margin="16dp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans"
                android:text="Calendar"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/connectdnd_switch"
                android:layout_width="302dp"
                android:layout_height="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans"
                android:text="Connect"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/logdnd_switch"
                android:layout_width="303dp"
                android:layout_height="28dp"
                android:layout_margin="16dp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans"
                android:text="Log"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/doctorsvisitsdnd_switch"
                android:layout_width="300dp"
                android:layout_height="29dp"
                android:layout_margin="16dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans"
                android:text="Doctor's Visits"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/scheduleddnd_switch"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/fira_sans_medium"
                android:text="Scheduled Do Not Disturb"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dndstarttime_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans_medium"
                android:text="Start Time:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/dndstarttime_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:ems="10"
                android:inputType="time" />

            <TextView
                android:id="@+id/dndendtime_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans"
                android:text="End Time:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/dndendtime_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:ems="10"
                android:inputType="time" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/savednd_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/fira_sans_medium"
                    android:text="Save"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>