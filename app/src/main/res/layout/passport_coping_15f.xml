<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans_bold"
                android:foregroundGravity="center"
                android:text="Coping & Pain"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans_semibold"
                android:text="If I get upset you can help me by..."
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="372dp"
                android:layout_height="109dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/fira_sans"
                android:inputType="textPersonName"
                android:text="list ways." />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans_semibold"
                android:text="I cope with medical procedures by..."
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="371dp"
                android:layout_height="99dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/fira_sans"
                android:inputType="textPersonName"
                android:text="list ways." />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fira_sans_semibold"
                android:text="If I am in pain I show it by..."
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="354dp"
                android:layout_height="93dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/fira_sans"
                android:inputType="textPersonName"
                android:text="list ways" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:foregroundGravity="right"
                    android:text="Update" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>